<Page x:Class="Exam.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Exam.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
        <TextBlock Text="Авторизация" HorizontalAlignment="Center" FontWeight="Bold"/>
        <StackPanel>
            <TextBlock Text="Логин:"/>
            <TextBox x:Name="loginTextBox"/>
        </StackPanel>
        <StackPanel>
            <TextBlock Text="Пароль:"/>
            <TextBox x:Name="passwordTextBox"/>
        </StackPanel>
        <StackPanel Margin="5">
            <Button x:Name="authorizationButton" Content="Войти" Margin="5" Click="AuthorizationButton_Click"/>
            <Button x:Name="GuestButton" Content="Войти как гость" Margin="5" Click="GuestButton_Click"/>
        </StackPanel>
    </StackPanel>
</Page>
